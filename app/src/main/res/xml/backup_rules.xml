<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!-- Include app preferences but exclude sensitive data -->
    <include domain="sharedpref" path="orielle_preferences"/>
    <exclude domain="sharedpref" path="orielle_preferences/guest_uuid"/>
    <exclude domain="sharedpref" path="orielle_preferences/last_checkin_timestamp"/>

    <!-- Include Room database -->
    <include domain="database" path="orielle_database"/>

    <!-- Exclude Firebase cache and temporary files -->
    <exclude domain="file" path="firebase_cache"/>
    <exclude domain="file" path="temp"/>
</full-backup-content>